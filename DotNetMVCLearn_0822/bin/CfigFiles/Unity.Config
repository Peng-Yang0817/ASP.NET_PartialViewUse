<configuration>
	<!--
		設定Unity要使用的dll
		根據配置文件去讀取dll，使其支持 Unity.Configuration
	-->
	<configSections>
		<section name="unity" type="Microsoft.Practices.Unity.Configuration.UnityConfigurationSection, Unity.Configuration"/>
	</configSections>

	<!---->
	<unity>
		<!--<sectionExtension type="Microsoft.Practices.Unity.InterceptionExtension.Configuration.InterceptionConfigurationExtension, Unity.Interception.Configuration"/>-->

		<containers>
			<!--在個別定義的container中註冊 對應的物件-->
			<container name="pengYangContainer">
				<!--
					如果在pengYangContainer這個container中索引
					"System.Data.Entity.DbContext"
					container 就會 map "DotNetMVCLearn_EF.WaterQuality.EF_WaterQualityModel"
					給請求者。
					
					[register格式]
					<register 
					type="nameSpace.IclassName, 專案dll名" 
					mapTo="nameSpace.className, 專案dll名"/>
				-->
				<!--<extension type="Interception"/>-->
				<register type="System.Data.Entity.DbContext, EntityFramework"
						  mapTo="DotNetMVCLearn_EF.WaterQuality.EF_WaterQualityModel, DotNetMVCLearn_EF"/>

				<register type="DotNetMVCLearn_Service.WaterQuality.WaterQualityService, DotNetMVCLearn_Service"
						  mapTo="DotNetMVCLearn_Service.WaterQuality.WaterQualityService, DotNetMVCLearn_Service"/>
			</container>
		</containers>
	</unity>
</configuration>
