@using DotNetMVCLearn_EF.WaterQuality;
@{
    ViewBag.Title = "Edit";
    Auth001 data = ViewBag.data;
}

<h2>使用者帳戶設置</h2>


<form class="form-horizontal" action="/AuthArea/UseIOCgetService/Edit" method="post">
    <input type="hidden" name="Id" value=@data.Id />
    <div class="form-group">
        <label class="control-label col-sm-2" for="UserName">使用者名稱 : </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="UserName" id="UserName"
                   placeholder="使用者名稱" value=@data.UserName>
            <small id="UserName" class="form-text text-muted">請輸入想更改的使用者名稱。</small>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="Email">電子郵件 : </label>
        <div class="col-sm-10">
            <input type="email" class="form-control" name="Email" id="Email"
                   placeholder="電子郵件" value=@data.Email>
            <small id="Email" class="form-text text-muted">請輸入想更改的使用者電子郵件。</small>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">送出</button>
        </div>
    </div>

</form>